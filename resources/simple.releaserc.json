{
  "branches": [
    "main",
    {
      "name": "dev",
      "prerelease": true
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          { "type": "feat", "section": "ğŸš€ Features", "release": "minor" },
          { "type": "fix", "section": "ğŸ› Bug Fixes", "release": "patch" },
          { "type": "deps", "section": "ğŸŒ² Dependencies", "release": "patch" },
          {
            "type": "docs",
            "section": "ğŸ“– Documentation Improvements",
            "release": "patch"
          },
          {
            "type": "style",
            "section": "ğŸ¨ Design Improvements",
            "release": "patch"
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "writerOpts": [
          { "type": "feat", "section": "ğŸš€ Features" },
          { "type": "fix", "section": "ğŸ› Bug Fixes" },
          { "type": "deps", "section": "ğŸŒ² Dependencies" },
          { "type": "docs", "section": "ğŸ“– Documentation Improvements" },
          { "type": "style", "section": "ğŸ¨ Design Improvements" }
        ]
