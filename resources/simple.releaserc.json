{
  "branches": [
    "main",
    {
      "name": "dev",
      "prerelease": true
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          { "type": "feat", "section": "🚀 Features", "release": "minor" },
          { "type": "fix", "section": "🐛 Bug Fixes", "release": "patch" },
          { "type": "deps", "section": "🌲 Dependencies", "release": "patch" },
          {
            "type": "docs",
            "section": "📖 Documentation Improvements",
            "release": "patch"
          },
          {
            "type": "style",
            "section": "🎨 Design Improvements",
            "release": "patch"
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "writerOpts": [
          { "type": "feat", "section": "🚀 Features" },
          { "type": "fix", "section": "🐛 Bug Fixes" },
          { "type": "deps", "section": "🌲 Dependencies" },
          { "type": "docs", "section": "📖 Documentation Improvements" },
          { "type": "style", "section": "🎨 Design Improvements" }
        ]
      }
    ],
    "@semantic-release/changelog"
  ]
}
